									<div class="form-group col-md-4">
	    								<label>valor Minimo</label>
	    								<input type="number" name="frmValorMinimo" id="frmValorMinimo" class="form-control" placeholder="Valor Minimo"   required>
	    							</div>
	    							<div class="form-group col-md-4">
	    								<label>valor M치ximo</label>
	    								<input type="number" name="frmValorMaximo" id="frmValorMaximo" class="form-control" placeholder="Valor M치ximo"  required>
	    							</div>									
		    					</div>
		    				</div>
		    				<div class="row">
